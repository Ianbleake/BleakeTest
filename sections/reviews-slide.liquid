<div class="seccreviewandproduct">
  <div class="custom-container">

    <div class="revslidertitle">
      <h3 class="reviewstitle">{{ section.settings.title }}</h3>
    </div>

    <div data-delay="4000" data-animation="cross" class="reviewslider w-slider" data-autoplay="true" data-easing="ease" data-hide-arrows="false" data-disable-swipe="false" data-autoplay-limit="0" data-nav-spacing="3" data-duration="500" data-infinite="true">
      
      <div class="maskreviews w-slider-mask">
        
        {% for block in section.blocks %}
          {% if block.settings.comment != blank %}

            <div class="slidereview w-slide">
              <div class="continforeview">
                <div class="namereviewclient"><em>{{ block.settings.autor }}</em></div>
                <div class="datereview"> {{ block.settings.review_title }} | {{ block.settings.review_date }} </div>
                <p class="clientreviewshome">{{ block.settings.comment }}</p>
                <img   src="{{ "stars-reviews.svg" | asset_url }}" alt="" class="starsreviewslider">
              </div>
            </div>

          {% endif %}
        {% endfor %}

      </div>

      {% if section.blocks.size > 1 %}
        <div class="arrowmainslider w-slider-arrow-left">
          <div class="w-icon-slider-left"></div>
        </div>
        <div class="arrowmainslider w-slider-arrow-right">
          <div class="w-icon-slider-right"></div>
        </div>
        <div class="mainslidenav garantias w-slider-nav w-slider-nav-invert w-round"></div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
"name": "Reviews",
"class": "index-section",
"settings": [
  {
    "type": "text",
    "id": "title",
    "label": "Titulo",
    "default": "Clientes satisfechos"
  }
],
"max_blocks": 6,
"blocks": [
  {
    "type": "comment",
    "name": "Review",
    "settings": [
      {
        "type": "text",
        "id": "autor",
        "label": "Autor"
      },{
        "type": "text",
        "id": "review_title",
        "label": "Titulo"
      },{
        "type": "text",
        "id": "review_date",
        "label": "Fecha"
      },{
        "type": "textarea",
        "id": "comment",
        "label": "Review"
      }
    ]
  }
],
"presets": [
{
"name": "Reviews y Productos"
}
]
}
{% endschema %}