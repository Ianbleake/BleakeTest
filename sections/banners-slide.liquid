
<div data-delay="4000" data-animation="slide" class="mainslider w-slider" data-autoplay="false" data-easing="ease" data-hide-arrows="false" data-disable-swipe="false" data-autoplay-limit="0" data-nav-spacing="4" data-duration="500" data-infinite="true">
  <div class="w-slider-mask">
    {% for block in section.blocks %}
      {% if block.settings.image-desktop-version != blank %}
        <div class="slidehome w-slide">
          <a href="{{ block.settings.link }}" class="linksliderhome w-inline-block">
            <img alt="{{ block.settings.image-desktop-version.alt }}" src="{{ block.settings.image-desktop-version |  image_url }}" class="imgbannerhome">
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  
  {% if section.blocks.size > 1 %}
    <div class="arrowmainslider w-slider-arrow-left">
      <div class="w-icon-slider-left"></div>
    </div>
    <div class="arrowmainslider w-slider-arrow-right">
      <div class="w-icon-slider-right"></div>
    </div>
    <div class="mainslidenav w-slider-nav w-slider-nav-invert w-round"></div>
  {% endif %}
</div>

<div data-delay="4000" data-animation="slide" class="mainslider mobile w-slider" data-autoplay="false" data-easing="ease" data-hide-arrows="false" data-disable-swipe="false" data-autoplay-limit="0" data-nav-spacing="4" data-duration="500" data-infinite="true">
  <div class="w-slider-mask">
    {% for block in section.blocks %}
      {% if block.settings.image-mobile-version != blank %}
        <div class="slidehome w-slide">
          <a href="{{ block.settings.link }}" class="linksliderhome w-inline-block">
            <img src="{%if block.settings.image-mobile-version %}{{ block.settings.image-mobile-version | img_url: 'master' }}{% else %}{{ block.settings.image-desktop-version | img_url: 'master' }}{% endif %}" alt="{{ block.settings.image-desktop-version.alt}}" class="imgbannerhome">
          </a>
        </div>
      {% endif %}
    {% endfor %}

  {% if section.blocks.size > 1 %}
    <div class="arrowmainslider w-slider-arrow-left">
      <div class="w-icon-slider-left"></div>
    </div>
    <div class="arrowmainslider w-slider-arrow-right">
      <div class="w-icon-slider-right"></div>
    </div>
    <div class="mainslidenav w-slider-nav w-round"></div>  
  {% endif %}
</div>

