<div class="container-listing">
  <div class="custom-container">
    <div>
      <div class="not-found-div" style="padding: 100px 0;"><img src="{{ section.settings.image |  image_url  }}" alt="Sin resultados icono" class="img-search">
        <h1 class="no-reults-txt">
          <strong class="bold-no-reults">{{ 'templates.404.subtext' | t }} - {{ section.settings.message }} </strong>
        </h1>

        <a href="{{ routes.all_products_collection_url }}" class="loginpopbtn center w-button"
          style="width: fit-content;">
          {{ 'general.continue_shopping' | t }}
        </a>
      </div>
    </div>
  </div>
</div>

{% schema  %}
{
  "name": "404",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen"
    },
    {
      "type": "text",
      "id": "message",
      "label": "Mensaje"
    }
  ]
}
{% endschema %}