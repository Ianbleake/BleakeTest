<footer>

  <div class="customfooter">

    <a href="{{ routes.root_url }}" class="logofooter w-inline-block">
      <img src="{{ section.settings.logo |  image_url  }}"  alt="Toluca FC logo" class="escudofooter">
    </a>

    <div class="custom-container">
    
      <div id="w-node-abf9476f-c460-dfd6-4453-3f0845eb2446-45eb2442" class="w-layout-layout footerstack wf-layout-layout">

        <div id="w-node-abf9476f-c460-dfd6-4453-3f0845eb2447-45eb2442" class="w-layout-cell">
          <div class="infocolfooter">
            <h5 class="footertitle">{{ section.settings.menu_1.title }}</h5>
            <ul role="list" class="listitemsfooter">
              {% for link in section.settings.menu_1.links %}
                <li class="footeritemlist">
                  <a href="{{ link.url }}" class="footerlinktxt">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>

        <div id="w-node-abf9476f-c460-dfd6-4453-3f0845eb2458-45eb2442" class="w-layout-cell">
          <div class="infocolfooter">
            <h5 class="footertitle">{{ section.settings.menu_2.title }}</h5>
            <ul role="list" class="listitemsfooter">
              {% for link in section.settings.menu_2.links %}
                <li class="footeritemlist">
                  <a href="{{ link.url }}" class="footerlinktxt">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>

        <div id="w-node-abf9476f-c460-dfd6-4453-3f0845eb2469-45eb2442" class="w-layout-cell">

          <div class="infocolfooter">
            {% unless section.settings.instagram == blank and section.settings.twitter == blank and section.settings.facebook == blank and section.settings.youtube == blank and section.settings.tiktok == blank   %}
              <h5 class="footertitle">SÍGUENOS</h5>
              <ul role="list" class="listitemsfooter">
                <li class="footeritemlist">
                  {% if section.settings.instagram != blank %}
                    <a href="{{ section.settings.instagram }}" target="_blank" class="linksocial w-inline-block">
                      <img src="{{ "icon_instagram.svg" | asset_url }}"  alt="Instagram" class="socialicon">
                    </a>
                  {% endif %}

                  {% if section.settings.twitter != blank %}
                    <a href="{{ section.settings.twitter }}" target="_blank" class="linksocial w-inline-block">
                      <img src="{{ "icon_twitter.svg" | asset_url }}"  alt="Twitter" class="socialicon">
                    </a>
                  {% endif %}

                  {% if section.settings.facebook != blank %}
                    <a href="{{ section.settings.facebook }}" target="_blank" class="linksocial w-inline-block">
                      <img src="{{ "icon_meta.svg" | asset_url }}"  alt="Facebook" class="socialicon">
                    </a>
                  {% endif %}

                  {% if section.settings.youtube != blank %}
                    <a href="{{ section.settings.youtube }}" target="_blank" class="linksocial w-inline-block">
                      <img src="{{ "icon_youtube.svg" | asset_url }}"  alt="Youtube" class="socialicon">
                    </a>
                  {% endif %}

                  {% if section.settings.tiktok != blank %}
                    <a href="{{ section.settings.tiktok }}" target="_blank" class="linksocial w-inline-block">
                      <img src="{{ "icon_tiktok.svg" | asset_url }}"  alt="Tiktok" class="socialicon">
                    </a>
                  {% endif %}
                
                </li>
              </ul>
            {% endunless %}
          </div>

          <div class="infocolfooter">
            {% if section.settings.email != blank %}
              <h5 class="footertitle">CONTACTO</h5>
              <ul role="list" class="listitemsfooter">
                <li class="footeritemlist">
                  <a href="{{ section.settings.email_url }}" class="footerlinktxt">{{ section.settings.email }}</a>
                </li>
              </ul>
            {% endif %}
          </div>

        </div>

        <div id="w-node-abf9476f-c460-dfd6-4453-3f0845eb2480-45eb2442" class="w-layout-cell">
          <div class="infocolfooter">
            <h5 class="footertitle"><strong>{{ section.settings.news_title }}</strong></h5>
            <div class="subscriptionform w-form">
              {% form 'customer' %}
                <p class="txtregularfooter">{{ section.settings.description-subscription }}</p>
                <div class="inputcontnews">
                  <input type="submit" data-wait="Please wait..." class="suscribebtn w-button" value="">
                  <input class="inputsuscription w-input" placeholder="Ingresa aquí tu email" maxlength="256" name="contact[email]" value="{{ form.email }}" type="email"  required >
                </div>
              {% endform %}
            </div>
            <ul role="list" class="listitemsfooter"></ul>
          </div>
        </div>

      </div>

      <div class="paymentinfocont">
        <h5 class="footertitle center">PAGOS SEGUROS</h5>
        <img src="{{ section.settings.logo_payment |  image_url }}"  alt="Metodos de pago" class="paymentlogos">
      </div>

      <div class="copyright">Copyright © 2024 Toluca Fútbol Club - Tienda Oficial · Designed and Developed by <a href="https://www.kubodigital.mx" target="_blank" class="kdlink">Kubo Digital</a></div>
    </div>
  </div>

</footer>


