<div class="seccdestacados">
  <div class="custom-container">

    <div class="maintitle-cont">
      <h2 class="maintitle">{{ section.settings.title }}</h2>
    </div>

    <div class="code-embed w-embed">
      <div class="owl-carousel productosowl owl-theme" id="sync2">

        {%- assign collection_tab = collections[section.settings.collection_1] -%}
        {% for product in collection_tab.products limit: section.settings.range_prod_1 %}
          {% render 'card-product',
            card_product: product,
            show_quick_add: true,
            section_id: section.id
          %}
        {% endfor %}

      </div>
    </div>
  </div>
</div>

{% schema  %}
{
  "name": "Carrusel de productos",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titulo de seccion",
      "default": "PRODUCTOS <span class=\"redtxttitle\">DESTACADOS</span>"
    },
    {
      "type": "collection",
      "id": "collection_1",
      "label": "Coleccion" 
    },
    {
      "type": "range",
      "id": "range_prod_1",
      "label": "No. de Productos",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 2
    }
  ],
  "presets": [
    {
      "name": "Carrusel de productos"
    }
  ]
}
{% endschema %}