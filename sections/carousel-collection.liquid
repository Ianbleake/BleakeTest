  
  <div class="seccproductos">
    <div class="custom-container">
      
      <div class="titlecontainer">
        <h1 class="mainsecctitle">{{ section.settings.title }}</h1>
      </div>
      
      <div class="html-embed w-embed">
        <div class="owl-carousel productosowl owl-theme" id="sync2">

          {%- assign collection_tab = collections[section.settings.collection_1] -%}
          {% for product in collection_tab.products limit: section.settings.range_prod_1 %}
            {% render 'card-product',
              card_product: product,
              show_quick_add: true,
              section_id: section.id
            %}
          {% endfor %}

        </div>
      </div>
      

    </div>
  </div>

{% schema %}
{
"name": "Carrusel de colecciones",
"class": "index-section",
"settings": [
{
"type": "text",
"id": "title",
"label": "Titulo de seccion",
"default": "¡Los más <strong class='boldtitles'>vendidos</strong>"
},
{
"id": "collection_1",
"type": "collection",
"label": "Colección"
},
{
"type": "range",
"id": "range_prod_1",
"label": "No. de Productos",
"min": 1,
"max": 12,
"step": 1,
"default": 2
}
],
"presets":[{
"name":"Carrusel de colecciones"
}]
}
{% endschema %}