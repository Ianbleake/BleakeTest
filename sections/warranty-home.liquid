<div class="seccgarantias">
  <div class="custom-container">

    <div class="maintitle-cont">
      <h2 class="maintitle">{{ section.settings.tittle }}</h2>
    </div>

    <div data-delay="4000" data-animation="cross" class="warrantyslide w-slider" data-autoplay="true" data-easing="ease-in-out" data-hide-arrows="false" data-disable-swipe="false" data-autoplay-limit="0" data-nav-spacing="3" data-duration="500" data-infinite="true">
      <div class="maskgarantias w-slider-mask">

        {% for block in section.blocks %}
          <div class="garantiaslide w-slide">
            <div class="continfowarranty">
              <img src="{{ block.settings.warranty_icon |  image_url  }}" class="iconwarranty">
              <div class="infow">
                <h5 class="subtitlewarrt">{{ block.settings.warranty_title }}</h5>
                <p class="infowarranty">{{ block.settings.warranty_description }}</p>
              </div>
            </div>
          </div>
        {% endfor %}

      </div>
      <div class="arrowsgarantias w-slider-arrow-left">
        <div class="w-icon-slider-left"></div>
      </div>
      <div class="arrowsgarantias w-slider-arrow-right">
        <div class="w-icon-slider-right"></div>
      </div>
      <div class="warrantyslidenav w-slider-nav w-slider-nav-invert w-round"></div>
    </div>
  </div>
</div>

{% schema %}
{
"name": "Garantía de calidad",
"class": "index-section",
"settings": [
{
"type": "text",
"id": "tittle",
"label": "Titulo de Seccion",
"default": "COMPRAS <span class='redtxttitle'>100% SEGURAS</span>"
}
],
"max_blocks": 3,
"blocks": [
{
"type": "warranty",
"name": "Garantia",
"settings": [
{
"type": "image_picker",
"id": "warranty_icon",
"label": "Icono"
},{
  "type": "text",
  "id": "warranty_title",
  "label": "Titulo de Garantia"
},
{
"type": "textarea",
"id": "warranty_description",
"label": "Descripcion"
}

]
}
],
"presets": [
{
"name": "Garantía de calidad"
}
]
}
{% endschema %}

